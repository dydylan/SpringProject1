<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="houseBean" class="com.example.demo.House">
        <constructor-arg value="Euratechnologies" type="java.lang.String"/>
        <constructor-arg value="30" type="int"/>
        <constructor-arg type="int"> <value>14</value></constructor-arg>
        <constructor-arg value="Myrthille" type="java.lang.String"></constructor-arg>
    </bean>

    <bean id="devBean" class="com.example.demo.Developper">
        <constructor-arg value="Euratechnologies" type="java.lang.String"/>
        <constructor-arg value="30" type="int"/>
        <constructor-arg type="int"> <value>14</value></constructor-arg>
        <constructor-arg value="Myrthille" type="java.lang.String"></constructor-arg>
    </bean>

    <bean id="companyBean" class="com.example.demo.Company">
        <constructor-arg value="Euratechnologies" type="java.lang.String"/>
        <constructor-arg value="30" type="int"/>
        <constructor-arg type="int"> <value>14</value></constructor-arg>
        <constructor-arg value="Myrthille" type="java.lang.String"></constructor-arg>
    </bean>

</beans>